<h2>Add Votes for a Pub</h2>

<form action="/votes" method="post">

  <label for="name">Select Pub placing votes:</label>
  <select name="voted_by">
  <% for pub in @pubs %> 

  <option value="<%= pub.id %>"><%= pub.name %></option>
  
  <% end %> 
  </select>
 <br>
 <label for="name">First vote:</label>
 <select name="first">
 <% for pub in @pubs %> 
 <option value="<%= pub.id %>"><%= pub.name %></option>
 <% end %> 
 </select>
 <br>
 <label for="name">Second vote:</label>
 <select name="second">
 <% for pub in @pubs %> 
 <option value="<%= pub.id %>"><%= pub.name %></option>
 <% end %> 
 </select>
 <br>
  <label for="name">Third vote:</label>
  <select name="third">
  <% for pub in @pubs %> 
  <option value="<%= pub.id %>"><%= pub.name %></option>
  <% end %> 
  </select>
  <br>
  <input type='submit' value="Confirm Votes for Pub">
  
</form>


